# ============================================================
# ENVIRONMENT VARIABLES TEMPLATE
# Copy this to .env and fill in your values
# NEVER commit .env to GitHub!
# ============================================================

# Environment: local | development | staging | production
ENVIRONMENT=local

# ============================================================
# DATABASE CONFIGURATION - LOCAL (Docker)
# ============================================================
# FOR LOCAL DEVELOPMENT - uses Docker PostgreSQL

# PostgreSQL Connection Details (Local/Docker)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=unilever_warehouse
DB_USER=postgres
DB_PASSWORD=123456

# Full PostgreSQL Connection URL
DATABASE_URL=postgresql://postgres:123456@localhost:5433/unilever_warehouse

# ============================================================
# DATABASE CONFIGURATION - AWS CLOUD (RDS)
# ============================================================
# FOR CLOUD DEPLOYMENT - uses RDS PostgreSQL
# Get these values from AWS RDS Console

# DB_HOST=unilever-warehouse.xxxxx.us-east-1.rds.amazonaws.com
# DB_PORT=5432
# DB_NAME=unilever_warehouse
# DB_USER=postgres
# DB_PASSWORD=your-very-secure-password-32-chars-minimum
# DB_SSLMODE=require
# DATABASE_URL=postgresql://postgres:password@unilever-warehouse.xxxxx.us-east-1.rds.amazonaws.com:5432/unilever_warehouse

# PGAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@unilever.com
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_PORT=5050

# ============================================================
# EMAIL CONFIGURATION (FOR ALERTS)
# ============================================================

# SMTP Server Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@unilever.com
ALERT_EMAIL=admin@unilever.com

# ============================================================
# SLACK CONFIGURATION (OPTIONAL)
# ============================================================

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================
# MICROSOFT TEAMS CONFIGURATION (NEW!)
# ============================================================
# Get this from your Teams channel Incoming Webhook
# Teams → Channel → ⋯ → Connectors → Incoming Webhook
# Format: https://outlook.office.com/webhook/xxxxxxxx...

TEAMS_WEBHOOK=https://outlook.office.com/webhook/your-actual-webhook-url-here

# ============================================================
# AIRFLOW CONFIGURATION
# ============================================================

AIRFLOW_HOME=/usr/local/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql://postgres:123456@localhost:5433/unilever_warehouse
AIRFLOW__CORE__FERNET_KEY=''
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false

# ============================================================
# DATA PATHS
# ============================================================

RAW_DATA_PATH=raw_data
STAGING_PATH=staging
ARCHIVE_PATH=raw_data/archive
LOG_PATH=logs
BACKUP_PATH=backups

# ============================================================
# DATA GENERATION CONFIGURATION
# ============================================================

NUM_PRODUCTS=1000
NUM_CUSTOMERS=4000
NUM_SALES=50000

# Data Quality Issue Rates (between 0 and 1)
PRODUCT_NULL_RATE=0.02
CUSTOMER_NULL_RATE=0.03
DUPLICATE_RATE=0.01
OUTLIER_RATE=0.005

# ============================================================
# MONITORING & ALERTING
# ============================================================

# Monitoring Ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Alert Thresholds
ALERT_DAILY_RECORDS_MIN=1000
ALERT_QUALITY_ISSUES_MAX=100
ALERT_FAILED_RUNS_COUNT=3

# ============================================================
# LOGGING CONFIGURATION
# ============================================================

LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_RETENTION_DAYS=30

# ============================================================
# APPLICATION SETTINGS
# ============================================================

ENVIRONMENT=development
TIMEZONE=UTC
DEBUG=false
