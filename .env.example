# ============================================================
# ENVIRONMENT VARIABLES TEMPLATE
# Copy this to .env and fill in your values
# ============================================================

# ============================================================
# DATABASE CONFIGURATION
# ============================================================

# PostgreSQL Connection Details
DB_HOST=localhost
DB_PORT=5433
DB_NAME=unilever_warehouse
DB_USER=postgres
DB_PASSWORD=123456

# Full PostgreSQL Connection URL
DATABASE_URL=postgresql://postgres:123456@localhost:5433/unilever_warehouse

# PGAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@unilever.com
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_PORT=5050

# ============================================================
# EMAIL CONFIGURATION (FOR ALERTS)
# ============================================================

# SMTP Server Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@unilever.com
ALERT_EMAIL=admin@unilever.com

# ============================================================
# SLACK CONFIGURATION (OPTIONAL)
# ============================================================

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================
# AIRFLOW CONFIGURATION
# ============================================================

AIRFLOW_HOME=/usr/local/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql://postgres:123456@localhost:5433/unilever_warehouse
AIRFLOW__CORE__FERNET_KEY=''
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false

# ============================================================
# DATA PATHS
# ============================================================

RAW_DATA_PATH=raw_data
STAGING_PATH=staging
ARCHIVE_PATH=raw_data/archive
LOG_PATH=logs
BACKUP_PATH=backups

# ============================================================
# DATA GENERATION CONFIGURATION
# ============================================================

NUM_PRODUCTS=1000
NUM_CUSTOMERS=4000
NUM_SALES=50000

# Data Quality Issue Rates (between 0 and 1)
PRODUCT_NULL_RATE=0.02
CUSTOMER_NULL_RATE=0.03
DUPLICATE_RATE=0.01
OUTLIER_RATE=0.005

# ============================================================
# MONITORING & ALERTING
# ============================================================

# Monitoring Ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Alert Thresholds
ALERT_DAILY_RECORDS_MIN=1000
ALERT_QUALITY_ISSUES_MAX=100
ALERT_FAILED_RUNS_COUNT=3

# ============================================================
# LOGGING CONFIGURATION
# ============================================================

LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_RETENTION_DAYS=30

# ============================================================
# APPLICATION SETTINGS
# ============================================================

ENVIRONMENT=development
TIMEZONE=UTC
DEBUG=false
